{
  "extends": ["config:base","docker:disable", ":disableRateLimiting"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "chart:\n *repository: .*?\n *name: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "datasources": ["helm"],
      "managers": ["regex"],
      "matchPackageNames": ["dynatrace-oneagent-operator"],
      "separateMinorPatch": true,
      "registryUrls": ["https://github.com/Dynatrace/helm-charts/tree/master/dynatrace-oneagent-operator/chart/default/"]
    }
  ]
}